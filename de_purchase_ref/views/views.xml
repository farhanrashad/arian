<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    
  <record id="view_stock_move_line_list_inhrt" model="ir.ui.view">
		<field name="name">stock.move.line.tree</field>
		<field name="model">stock.move.line</field>
		<field name="inherit_id" ref="stock.view_move_line_tree" />
		<field name="arch" type="xml">
            <xpath expr="//field[@name = 'product_id']" position="after">
				<field name="sale_id" />
                <field name="categ_id" />
			</xpath>
		</field>
	</record>
 
      <record id="view_mrp_production_list_inhrt" model="ir.ui.view">
		<field name="name">mrp.production.tree</field>
		<field name="model">mrp.production</field>
		<field name="inherit_id" ref="mrp.mrp_production_tree_view" />
		<field name="arch" type="xml">
            <xpath expr="//field[@name = 'product_id']" position="after">
                <field name="categ_id" />
                <field name="category_id"  />
			</xpath>
		</field>
	</record>

        <record id="mrp_production_pivot_view_inherit" model="ir.ui.view">
			<field name="name">mrp.production.pivot.view.inherit</field>
			<field name="model">mrp.production</field>
			<field name="inherit_id" ref="mrp.view_production_pivot"/>
			<field name="arch" type="xml">
               
                <xpath expr="//field[@name='date_deadline']" position="after">
                     <field name="category_id"  widget='monetary' />
                        
				</xpath>
              
			</field>
	   </record>
    
    <record id="view_stock_pivot_inhrt" model="ir.ui.view">
		<field name="name">stock.move.line.tree</field>
		<field name="model">stock.move.line</field>
		<field name="inherit_id" ref="stock.view_move_line_form" />
		<field name="arch" type="xml">
            <xpath expr="//field[@name = 'date']" position="after">
                <field name="category_id" invisible="1" />
			</xpath>
		</field>
	</record>
    
    <record id="view_sale_order_form_inhrt" model="ir.ui.view">
		<field name="name">sale.order.form</field>
		<field name="model">sale.order</field>
		<field name="inherit_id" ref="sale.view_order_form" />
		<field name="arch" type="xml">
            <xpath expr="//field[@name = 'partner_id']" position="after">
                <button name="calculate_date" string="Return" type="object" class="oe_highlight"/>
			</xpath>
			<xpath expr="//group[@name = 'sale_shipping']" position="after">
                <group>
                    <group>
                        <field name="insert_days" />
                    </group>
                    <group>
                        <field name="days_days" string="Days"/>
                    </group>
                </group>
                <group>
                     <field name="bl_date" />
                </group>
			</xpath>
		</field>
	</record> 
    
</odoo>

