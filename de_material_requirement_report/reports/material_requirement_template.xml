<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="material_template">
        <t t-call="web.external_layout">
            <t t-call="web.html_container">
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Done</th>
                            <th>Demand</th>
                            <th>Reserved</th>
                            <th>UOM</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="docs" t-as='o'>
                            <tr>
                                <td>
                                    <t t-esc="o.product_id.name"/>
                                </td>
                                <td>
                                    <t t-esc="round((o.quantity),4)"/>
                                </td>
                                <td>
                                    <t t-esc="round((o.mr_demand),4)"/>
                                </td>
                                <td>
                                    <t t-esc="round((o.mr_reserved),4)"/>
                                </td>
                                <td>
                                    <t t-esc="o.mr_uom.name"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </t>
        </t>
    </template>

</odoo>