<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_payment_workflow_form_view" model="ir.ui.view">
            <field name="name">inherit.payment.workflow.form.view</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/header/button[@name='post']" position="after">
                    <button name="submit_payment" class="oe_highlight" states="draft" string="Submit" groups="de_payment_workflow.group_submit_payment" type="object"/>
                    <button name="action_return" class="oe_highlight" string="Return" type="object"    attrs="{'invisible': ['|',('payment_method_code', '!=', 'pdc'),('state', '!=', 'posted')]}"/>                   
                     <button name="action_deposit" class="oe_highlight" string="Deposit" type="object"   attrs="{'invisible': ['|',('payment_method_code', '!=', 'pdc'),('state', '!=', 'posted')]}"/>
                    
                    <button name="action_post_payment" class="oe_highlight"  string="Payment" type="object"  attrs="{'invisible': ['|',('payment_method_code', '!=', 'pdc'),('state', '!=', 'approved')]}"/>


                    
                    
                    <button name="approve_payment" class="oe_highlight" states="submit" groups="de_payment_workflow.group_approver_payment" string="Approve Payment" type="object"/>

                </xpath>
                <xpath expr="/form/header/button[@name='post']" position="replace">
                    <button name="post" class="oe_highlight"  string="Confirm" groups="de_payment_workflow.group_payment_confirm" type="object" attrs="{'invisible': ['|',('payment_method_code', '=', 'pdc'),('state', 'in', ['draft','posted','returned','deposited','reconciled','cancelled','submit'])]}"/>
                </xpath>
                <xpath expr="/form/header/field[@name='state']" position="replace">

                        <field name="state" widget="statusbar" statusbar_visible="draft,submit,approved,posted,reconciled,cancelled"
                               attrs="{'invisible':[('payment_type','!=','outbound')]}"/>

                </xpath>
                 <xpath expr="//field[@name='payment_method_id']" position="after">

                        <field name="pdc_journal_id" 
                              attrs="{'invisible': [('payment_method_code', '!=', 'pdc')],'required': [('payment_method_code', '=', 'pdc')]}"/>
                       <field name="planned_date" 
                               attrs="{'invisible': [('payment_method_code', '!=', 'pdc')]}"/>
                       <field name="encashed_date" 
                               attrs="{'invisible': [('payment_method_code', '!=', 'pdc')]}"/>
                       <field name="cheque_number" 
                               readonly="0"/>
                       <field name="check_status" 
                               attrs="{'invisible': [('payment_method_code', '!=', 'pdc')]}"/>

                </xpath>
                
                
                <form string="Register Payment">
                      <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                      <field name="message_ids" widget="mail_thread"/>
                </form>
            </field>
        </record>

        <record id="inherit_view_account_payment_invoice_form" model="ir.ui.view">
            <field name="name">account.payment.invoice.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//footer" position="replace">
                    <footer>
                        <field name="state" invisible="1"/>
	                    <button string='Validate' name="action_validate_invoice_payment" type="object"
	                        class="btn-primary" attrs="{'invisible': [('payment_type', '=', 'outbound')]}"/>
	                    <button string='Validate' name="just_create_payment" type="object"
	                        class="btn-primary" attrs="{'invisible': [('payment_type', '!=', 'outbound')]}"/>
	                    <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </xpath>
            </field>
        </record>
        
            <record id="inherit_view_account_journal_form" model="ir.ui.view">
            <field name="name">account.journal.invoice.form</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='code']" position="after">
                        <field name="cheque_number_next" />
                </xpath>
            </field>
        </record>

    </data>
</odoo>