<odoo>
  <data>
  <template id="report_stock_report_delivery_document_inherit" inherit_id="stock.report_delivery_document">
      <xpath expr="/t/t/t/div/div" position="inside">
        <div t-if="o.tax_before_id" class="col-auto" name="div_tax_before">
             <strong>Tax Before Discount:</strong>
              <t t-if="o.tax_before_id">
                     <p t-field="o.tax_before_id"/>
               </t>
          </div>
           <div t-if="o.after_tax_id" class="col-auto" name="div_tax_after">
             <strong>Tax After Discount:</strong>
              <t t-if="o.after_tax_id">
                     <p t-field="o.after_tax_id"/>
               </t>
          </div>
           <div t-if="o.discount" class="col-auto" name="div_discount">
             <strong>Discount:</strong>
              <t t-if="o.discount">
                     <p t-field="o.discount"/>
               </t>
          </div>
    </xpath>
      
        <xpath expr="/t/t/t/div/table[1]/thead/tr/th[2]" position="after">
        <th>
            <span>Tax Amount</span>
        </th>
        <th>
            <span>Subtotal</span>
        </th>
    </xpath>
    <xpath expr="/t/t/t/div/table[1]/tbody/tr/td[2]" position="after">
        
        <td>
            <span t-field="move.tax_amount"/>
        </td>
        
        <td>
            <span t-esc="move.subtotal + move.tax_amount"   />
        </td>
       
    </xpath>
    
      <xpath expr="/t/t/t/div/table[2]" position="after">
       <div id="total" class="row justify-content-end">
                <div class="col-4">
                    <table class="table table-sm">
                        <tr class="border-black">
                            <td name="td_subtotal_label"><strong>Untaxed Amount</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_untaxed" />
                            </td>
                        </tr>
                        <tr>
                            <td name="td_taxes_label">Taxes</td>
                            <td class="text-right">
                               <t t-set="sum_qty_finish" t-value="o.currency_id.id"/>   
                                <span t-field="o.amount_tax"/>
                            </td>
                        </tr>
                        <tr class="border-black o_total">
                            <td name="td_amount_total_label"><strong>Total</strong></td>
                            <td class="text-right">
                               <t t-set="sum_qty_finish" t-value="o.currency_id.id"/>   
                                <span t-field="o.total_amount"/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
    </xpath> 
      
      

    </template>
  </data>
</odoo>