<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_purchase_order_form_inhrt" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
          <xpath expr="//notebook/page[@name = 'order_lines']/group[@name = 'note_group']" position="after">
    <button name="change_order_compute" string="SUMMARY" type="object" />
        <field name="is_compute_qty_amount" invisible="1" />
              
              <field name="product_tmpl_ids" attrs="{'invisible':[('is_compute_qty_amount', '=', False)]}">
                <tree>
                    <field name="parent_product" />
                    <field name="total_quantity" />
                    <field name="total_amount"/>
                </tree>                        
              </field>
            
            </xpath>
        </field>
    </record>
    
</odoo>


