<odoo>
  <data>
      <record id="purchase_order_form_view_inherit" model="ir.ui.view">
			<field name="name">purchase.order.tree.view.inherit</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='date_approve']" position="after">
                        <field name="date_planned" widget="date"/>
            
				</xpath>
                <xpath expr="//page[@name='purchase_delivery_invoice']//group//group[@name='planning']" position="attributes">
                    <attribute name='invisible'>1</attribute>
            
				</xpath>
			</field>
	   </record>
      
      <record id="sale_order_form_view_inherit" model="ir.ui.view">
			<field name="name">sale.order.tree.view.inherit</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='partner_id']" position="after">
                        <field name="purchase_id"/>
            
				</xpath>
                <xpath expr="//field[@name='commitment_date']" position="attributes">
                    <attribute name="required">1</attribute>
            
				</xpath>
			</field>
	   </record>
  </data>
</odoo>