<odoo>
  <data>
          <record id="mrp_production_view_inherit" model="ir.ui.view">
			<field name="name">mrp.production.form.view</field>
			<field name="model">mrp.production</field>
			<field name="inherit_id" ref="mrp.mrp_production_form_view"/>
			<field name="arch" type="xml">
                    <xpath expr="//button[@name='post_inventory']" position="attributes">
                      <attribute name="groups">de_product_enhancement.group_allow_post_inventory</attribute>
				</xpath>
			</field>
	  </record>  

          <record id="view_res_partner_deduction_policy" model="ir.ui.view">
			<field name="name">res.partner.form.view</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form"/>
			<field name="arch" type="xml">
                        <xpath expr="//button[@name='vat']" position="after">
                            <field name="deduction_policy" />
			</xpath>
			</field>
	  </record>   

           <record id="sale_order_tree_view_inherit" model="ir.ui.view">
			<field name="name">sale.order.tree.view.inherit</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_tree"/>
			<field name="arch" type="xml">
                    <xpath expr="//field[@name='commitment_date']" position="attributes">
                      <attribute name="invisible">1</attribute>
				</xpath>
                     <xpath expr="//field[@name='commitment_date']" position="after">
                              <field name="expected_delivery_date"  string="Delivery Date"/>
				</xpath>
			</field>
	  </record>   

           <record id="sale_qutation_tree_view_inherit" model="ir.ui.view">
			<field name="name">sale.order.tree.qutation.view.inherit</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_quotation_tree"/>
			<field name="arch" type="xml">
                    <xpath expr="//field[@name='commitment_date']" position="attributes">
                      <attribute name="invisible">1</attribute>
				</xpath>
                      <xpath expr="//field[@name='commitment_date']" position="after">
                               <field name="expected_delivery_date" string="Delivery Date" />
				</xpath>
			</field>
	  </record>   
              

          <record id="stock_quant_form_view_inherit" model="ir.ui.view">
			<field name="name">stock.quant.tree.view.inherit</field>
			<field name="model">stock.quant</field>
			<field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
			<field name="arch" type="xml">
                            <xpath expr="//field[@name='inventory_quantity']" position="attributes">
                    <attribute name="readonly">1</attribute>
				</xpath>
			</field>
	   </record>



       
       <record id="purchase_order_pivot_view_inherit" model="ir.ui.view">
			<field name="name">purchase.order.tree.view.inherit</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_pivot"/>
			<field name="arch" type="xml">
               
                <xpath expr="//field[@name='amount_total']" position="after">
                        <field name="bill_amount"  widget='monetary'/>
                        <field name="remaining_bill_amount"  widget='monetary'/>
                        
				</xpath>
              
			</field>
	   </record>
      
       <record id="purchase_order_tree_view_inherit" model="ir.ui.view">
			<field name="name">purchase.order.tree.view.inherit</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_tree"/>
			<field name="arch" type="xml">
               
                <xpath expr="//field[@name='amount_total']" position="after">
                        <field name="bill_amount" optional='hide' widget='monetary'/>
                        <field name="remaining_bill_amount"  optional='hide' widget='monetary'/>
                        
				</xpath>
              
			</field>
	   </record>
      


       
      <record id="purchase_order_form_view_inherit" model="ir.ui.view">
			<field name="name">purchase.order.tree.view.inherit</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_form"/>
			<field name="arch" type="xml">
                            <xpath expr="//header//button[@name='button_done']" position="attributes">
                    <attribute name="groups">de_product_enhancement.group_lock_order_access</attribute>
				</xpath>
                <xpath expr="//header//button[@name='button_unlock']" position="attributes">
                    <attribute name="groups">de_product_enhancement.group_unlock_order_access</attribute>
				</xpath>

                                <xpath expr="//field[@name='amount_total']" position="after">
                                 <field name="bill_amount" widget='monetary'/>
                                 <field name="remaining_bill_amount" widget='monetary'/>
                        
				</xpath>


				<xpath expr="//field[@name='date_approve']" position="after">
                        <field name="receipt_date" widget="date"/>
                        <field name="payment_term_date" widget="date"/>
                        <field name="is_received" invisible="1"/>
				</xpath>
                <xpath expr="//page[@name='purchase_delivery_invoice']//group//group[@name='planning']" position="replace">
                  <group name="planning">
                      <label for="date_planned" string="Original Date"/>
                      <div>
                          <field name="date_planned" attrs="{'readonly': [('state', 'not in', ('draft', 'sent'))]}"/>
                      </div>
                 </group>
				</xpath>
			</field>
	   </record>
      
      <record id="sale_order_form_view_inherit" model="ir.ui.view">
			<field name="name">sale.order.tree.view.inherit</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='partner_id']" position="after">
                        <field name="purchase_id"/>
            
				</xpath>
                <xpath expr="//field[@name='commitment_date']" position="attributes">
                    <attribute name="required">0</attribute>
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//group[@name='sale_shipping']" position="inside">
                     <field name="expected_delivery_date" attrs="{'readonly': [('state','=','done')]}"/>  
                    
				</xpath>
			</field>
	   </record>
      
       <record id="product_template_form_view_inherit" model="ir.ui.view">
			<field name="name">product.template.tree.view.inherit</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_only_form_view"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='tracking']" position="after">
                         <field name="allow_location"/>
           
				</xpath>
			</field>
	   </record>
      
               <record id="account_view_move_form_inherit" model="ir.ui.view">
			<field name="name">account.move.form.inherit</field>
			<field name="model">account.move</field>
			<field name="inherit_id" ref="account.view_move_form"/>
			<field name="arch" type="xml">
                            <xpath expr="//field[@name='invoice_payment_term_id']" position="replace">
                 <field name="invoice_payment_term_id" placeholder="Terms" attrs="{'invisible': [('type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))],'readonly': [('state','not in',('draft','waiting','approved','posted'))]}"/>
				</xpath>
				<xpath expr="//field[@name='invoice_date_due']" position="replace">
                <field name="invoice_date_due" placeholder ="Date" attrs="{'invisible': ['|', ('invoice_payment_term_id', '!=', False), ('type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))],'readonly': [('state','not in',('draft','waiting','approved','posted'))]}"/>
				</xpath>
			</field>
	   </record>
  </data>
</odoo>