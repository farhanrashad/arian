<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>

        <record id="commercial_report_paperformat" model="report.paperformat">
            <field name="name">Commercial Report Paper Format</field>
            <field name="default" eval="False"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">28</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>


        <report
                id="report_custom_proforma1_pdf"
                string="Custom Proforma"
                model="sale.order"
                report_type="qweb-pdf"
                file="de_custom_proforma_invoice.custom_proforma_invoice1"
                name="de_custom_proforma_invoice.custom_proforma_invoice1"
                menu = "False"
        />

        <report
                id="cycle_gear_commercial_invoice_action"
                string="Commercial Proforma"
                model="sale.order"
                report_type="qweb-pdf"
                file="de_custom_proforma_invoice.cycle_gear_commercial"
                name="de_custom_proforma_invoice.cycle_gear_commercial"
                menu = "False"
        />

        <report
                id="cycle_gear_proforma_invoice_action"
                string="Cycle Gear Proforma"
                model="sale.order"
                report_type="qweb-pdf"
                file="de_custom_proforma_invoice.cycle_gear_proforma"
                name="de_custom_proforma_invoice.cycle_gear_proforma"
                menu="False"
        />

        <report
                id="commercial_report_action"
                string="Cycle Gear Commercial"
                model="sale.order"
                report_type="qweb-pdf"
                file="de_custom_proforma_invoice.commercial_report"
                name="de_custom_proforma_invoice.commercial_report"
                menu="False"
                paperformat = 'de_custom_proforma_invoice.commercial_report_paperformat'
        />
    </data>
</odoo>