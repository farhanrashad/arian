<?xml version="1.0" encoding="UTF-8" ?>

<odoo>

    <record id="view_purchase_order_form_ex" model="ir.ui.view">
        <field name="name">purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='origin']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>

            <xpath expr="//field[@name='order_line']//tree//field[@name='product_qty']" position="replace">
                <field name="product_qty"  attrs="{'readonly': [('parent.origin','!=',False)]}"/>
            </xpath>

        </field>
    </record>

</odoo>
        <!--attrs="{'invisible': [('parent.origin','=',False)]}"-->