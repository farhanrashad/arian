<odoo>
  <data>
    <record id="stock_move_line_tree_inherit" model="ir.ui.view">
        <field name="name">stock.move.line.tree.inherit</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_tree"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='reference']" position="after">
                <field name="contact"/>
            </xpath>
        </field>
    </record>

     <record id="stock_move_line_form_inherit" model="ir.ui.view">
        <field name="name">stock.move.line.form.inherit</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='reference']" position="after">
                <field name="contact"/>
            </xpath>
        </field>
    </record>
      
      <record id="stock_move_line_search_inherit" model="ir.ui.view">
        <field name="name">stock.move.line.search.inherit</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.stock_move_line_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='reference']" position="after">
                <field name="contact"/>
            </xpath>
            <xpath expr="//filter[@name='groupby_product_id']" position="after">
                <filter string="Contact" name="contact_filter" context="{'group_by':'contact'}"/>
            </xpath>
            
        </field>
    </record>     
      
      
  </data>
</odoo>