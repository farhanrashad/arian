<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
  <data>
  <record id="view_res_partner_frm_inhrt" model="ir.ui.view">
    <field name="name">res.partner.form</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form" />
    <field name="arch" type="xml">
      <xpath expr="//field[@name = 'date_of_birth']" position="after">
        <field name="ssn"/>
      </xpath>

      <xpath expr="//field[@name = 'service_price']" position="attributes">
                <attribute name="invisible">1</attribute>
      </xpath>


	  <xpath expr="//field[@name = 'current_company']" position="after">
        <field name="contract_term"/>
      </xpath>

       <xpath expr="//field[@name = 'notes']" position="attributes">
                <attribute name="invisible">1</attribute>
      </xpath>


    </field>
  </record>
  </data>
</odoo>