<odoo>

	<record id="view_bank_statement_form_inhrt" model="ir.ui.view">
		<field name="name">account.bank.statement.form</field>
		<field name="model">account.bank.statement</field>
		<field name="inherit_id" ref="account.view_bank_statement_form"/>
		<field name="arch" type="xml">
<!-- 			<xpath expr="//header/button[@name='action_bank_reconcile_bank_statements']" position="after">
					<button string='Send for validation' name="action_Send_validation" type="object"
						class="btn-primary" state="new" />
			</xpath> -->
            <xpath expr="//header/field[@name='state']" position="replace">
					 <field name="state" widget="statusbar" statusbar_visible="open,sent_for_validation,confirm"/>
			</xpath>
            
            <xpath expr="//header/button[@name='action_bank_reconcile_bank_statements']" position="attributes">
                <attribute name="attrs">{'invisible':[('state', '!=', 'open'),('state', '!=', 'sent_for_validation')]}</attribute>
            </xpath> 
			
             <xpath expr="//header/button[@name='check_confirm_bank']" position="attributes">
				<attribute name="attrs">{'invisible':[('state', '!=', 'sent_for_validation')]}</attribute>	 
			</xpath>
            
            <xpath expr="//header" position="inside">
              <button string='Send for validation' name="action_Send_validation" states="open" type="object" class="btn-primary"
                      group='revert_reconciliation_groups_root' />
            </xpath>
            
<!--             <xpath expr="//header/button[@name='check_confirm_bank']" position="replace">
				<button name="check_confirm_bank" string="Validate" type="object" class="oe_highlight" states="sent_for_validation" />	 
			</xpath> -->
            
             
    
		</field>
	</record>

</odoo>

 

