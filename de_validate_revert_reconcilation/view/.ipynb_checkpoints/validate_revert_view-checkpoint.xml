<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

	<record id="view_bank_statement_form_inhrt" model="ir.ui.view">
		<field name="name">account.bank.statement.form</field>
		<field name="model">account.bank.statement</field>
		<field name="inherit_id" ref="account.view_bank_statement_form"/>
		<field name="arch" type="xml">

            <xpath expr="//header/field[@name='state']" position="replace">
					 <field name="state" widget="statusbar" statusbar_visible="open,sent_for_validation,confirm"/>
			</xpath>
            
             <xpath expr="//header/button[@name='action_bank_reconcile_bank_statements']" position="attributes">
                <attribute name="groups">de_validate_revert_reconcilation.revert_reconciliation_users</attribute>
            </xpath> 
            
            <xpath expr="//header/button[@name='action_bank_reconcile_bank_statements']" position="attributes">
                <attribute name="states">open,sent_for_validation,confirm</attribute>	 
            </xpath> 
            
            <xpath expr="//header/button[@name='316']" position="attributes">
                <attribute name="states">open</attribute>	 
            </xpath> 

            <xpath expr="//header/button[@name='check_confirm_bank']" position="attributes">
				<attribute name="attrs">{'invisible':[('state', 'in', ['open','confirm'])]}</attribute>	 	 
			</xpath>
            
            <xpath expr="//header/button[@name='check_confirm_bank']" position="attributes">
				<attribute name="groups">de_validate_revert_reconcilation.revert_reconciliation_users</attribute>	  
			</xpath>
           
            <xpath expr="//header/button[@name='316']" position="attributes">
                <attribute name="groups">de_validate_revert_reconcilation.revert_reconciliation_users</attribute>
            </xpath> 
            
            <xpath expr="//header/button[@name='button_reopen']" position="attributes">
				<attribute name="groups">de_validate_revert_reconcilation.revert_reconciliation_users</attribute>	 
			</xpath>
            
            <xpath expr="//header" position="inside">
              <button string='Send for validation' name="action_Send_validation" states="open" type="object" class="btn-primary" />
            </xpath> 
            
            <xpath expr="//notebook/page/field/tree/button[@name='button_cancel_reconciliation']" position="attributes">
              <attribute name="groups">de_validate_revert_reconcilation.revert_revert_users</attribute>
            </xpath>
   
		</field>
	</record>

</odoo>
