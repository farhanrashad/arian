<?xml version="1.0" encoding="utf-8"?>
<odoo>

		<record id="view_extra_issuance_form" model="ir.ui.view">
			<field name="name">extra.issuance.form</field>
			<field name="model">extra.issuance</field>
			<field name="arch" type="xml">
				<form string="Extra Issuance Form">
					<header>
                        <button name="action_process" string="Process" type="object"
								attrs="{'invisible': [('state', '!=', 'draft')]}"
								class="btn-primary" />
                        <button name="action_submit" string="Submit" type="object"
								attrs="{'invisible': [('state', '!=', 'processed')]}"
								class="btn-primary" />
                        <button name="action_approve" string="Approve" type="object"
								groups="de_extra_issuance.extra_issuance_approve"

								class="btn-primary" />
<!--						attrs="{'invisible': [('state', '!=', 'submitted')]}"-->
                        <field name="state" widget="statusbar"/>
                    </header>
					<sheet>
						<group>
							<group>
								<field name="sale_order" />
							</group>
							<group>
								<field name="reason" />
							</group>
						</group>
						<notebook>
							<page string="Articles">
								<field name="articles_lines">
									<tree  editable="bottom">
										<field name="product_id"/>
										<field name="quantity"/>
										<field name="relation_article" invisible="1"/>
									</tree>
								</field>
							</page>
							<page string="Components">
								<field name="component_lines">
									<tree  editable="bottom">
										<field name="product_id"/>
										<field name="component_qty"/>
										<field name="relation_component" invisible="1"/>
									</tree>
								</field>
							</page>
                    	</notebook>
					</sheet>
				</form>
			</field>
		</record>

		<record id="view_extra_issuance_tree" model="ir.ui.view">
			<field name="name">extra.issuance.tree</field>
			<field name="model">extra.issuance</field>
			<field name="arch" type="xml">
				<tree string="Extra Issuance Tree">
					<field name="sale_order" />
					<field name="reason" />
				</tree>
			</field>
		</record>

		<record id="view_extra_issuance_search" model="ir.ui.view">
			<field name="name">extra.issuance.search</field>
			<field name="model">extra.issuance</field>
			<field name="arch" type="xml">
				<search string="Extra Issuance Search">
					<field name="sale_order" />
					<field name="reason" />
				</search>
			</field>
		</record>


		<record id="action_extra_issuance_view" model="ir.actions.act_window">
            <field name="name">Extra Issuance</field>
            <field name="res_model">extra.issuance</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
			<field name="view_id" ref="view_extra_issuance_tree"/>
            <field name="search_view_id" ref="view_extra_issuance_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                   Add Extra Issuances ...........
                </p>
            </field>
        </record>

		<menuitem id="extra_issuance_menu"
				  name="Extra Issuance Request"
				  action="de_extra_issuance.action_extra_issuance_view"
				  parent="stock.menu_stock_warehouse_mgmt"
				  sequence="1" />

</odoo>